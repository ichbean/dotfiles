{{ if eq .chezmoi.hostname "home" }}
font_size 16.0
{{ else }}
font_size 15.0
{{ end }}
font_family monospace
font_features FiraCode-Regular +ss04 +ss06
cursor_blink_interval 0.5
cursor_stop_blinking_after 0
mouse_hide_wait -1
sync_to_monitor yes
enable_audio_bell no
rectangle_select_modifiers ctrl
strip_trailing_spaces always
include ./nord.conf
